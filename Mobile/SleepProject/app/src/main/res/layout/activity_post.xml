<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack"
        tools:context=".PostActivity">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/colorBack"
            android:orientation="vertical" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <android.support.v7.widget.CardView
                        app:cardBackgroundColor="@color/colorBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0" android:id="@+id/postCard">
                    <RelativeLayout
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_alignParentRight="true"
                                android:id="@+id/postUsername"
                                android:text="username"
                                android:textColor="@color/cardview_dark_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp" android:textAllCaps="false"/>
                        <TextView
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/postUsername"
                                android:text="Lorem ipsum dolor sit amet, consec                aaaaaaaaaaa mod tempor incididunt ut labore et daaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/postBody"
                                android:textColor="@color/cardview_dark_background" android:textSize="18sp"/>
                        <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_gravity="bottom"
                                android:layout_below="@id/postBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_favorite_border_black_24dp"
                                    android:id="@+id/postLike"/>
                            <TextView
                                    android:layout_gravity="center"
                                    android:text="1013"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/postLikes"
                                    android:layout_weight="1"
                                    android:textColor="@color/cardview_dark_background"/>
                            <TextView
                                    android:background="@drawable/ic_comment"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="22dp"
                                    android:layout_gravity="center"
                                    android:layout_height="22dp"/>
                            <TextView
                                    android:paddingLeft="2dp"
                                    android:layout_gravity="center"
                                    android:text="1013"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/postComments"
                                    android:layout_weight="1"
                                    android:textColor="@color/cardview_dark_background"/>

                        </LinearLayout>
                        <TextView
                                android:layout_alignParentTop="true"
                                android:paddingTop="2dp"
                                android:text="05-04-2019"
                                android:textColor="@color/cardview_dark_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/postDate"
                                android:textSize="12sp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/comments_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>
        <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/colorBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <EditText
                        android:id="@+id/comment_input"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Type your comment"
                        android:textColor="@color/cardview_dark_background"/>
                <Button
                        android:id="@+id/comment_send"
                        android:layout_width="48dp"
                        android:layout_height="48dp"

                        android:background="@drawable/ic_send_black_24dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <ProgressBar
            android:id="@+id/postSpinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>