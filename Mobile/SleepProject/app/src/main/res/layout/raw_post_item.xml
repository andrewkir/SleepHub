<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteY="81dp">


    <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/raw_username"
                    android:layout_alignParentTop="true"
                    android:text="username"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" android:textAllCaps="false"/>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/raw_username"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/raw_post"
                    android:textColor="@color/cardview_dark_background"/>
            <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_favorite_border_black_24dp" android:id="@+id/raw_like"/>
                <TextView
                        android:text="1013"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/raw_likes" android:layout_weight="1"
                        android:textColor="@color/cardview_dark_background"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
