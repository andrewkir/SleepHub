<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteY="81dp">


    <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">
        <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/raw_username"
                    android:text="username"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" android:textAllCaps="false"/>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/raw_username"
                    android:text="Lorem ipsum dolor sit amet, consec                aaaaaaaaaaa mod tempor incididunt ut labore et daaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/raw_post"
                    android:textColor="@color/cardview_dark_background" android:textSize="18sp"/>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="bottom"
                    android:layout_below="@id/raw_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_favorite_border_black_24dp" android:id="@+id/raw_like"/>
                <TextView
                        android:layout_gravity="center"
                        android:text="1013"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/raw_likes" android:layout_weight="1"
                        android:textColor="@color/cardview_dark_background"/>
                <TextView
                        android:background="@drawable/ic_comment"
                        android:layout_marginLeft="10dp"
                        android:layout_width="22dp"
                        android:layout_gravity="center"
                        android:layout_height="22dp"/>
                <TextView
                        android:paddingLeft="2dp"
                        android:layout_gravity="center"
                        android:text="1013"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/raw_comments" android:layout_weight="1"
                        android:textColor="@color/cardview_dark_background"/>

            </LinearLayout>
            <TextView
                    android:layout_alignParentTop="true"
                    android:paddingTop="2dp"
                    android:text="05-04-2019"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/raw_date" android:textSize="12sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
